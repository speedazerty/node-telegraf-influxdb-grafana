{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "./build/"
  },
  "exclude": [
    "node_modules",
    "typings/globals"
  ],
  "compileOnSave": true
}
